@model HealthCareMonitoringAPP.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>@Model.Name</h2>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("d")</p>
    <p><strong>Emergency Contact:</strong> @Model.EmergencyContactName</p>
    <p><strong>Emergency Contact Phone:</strong> @Model.EmergencyContactPhone</p>
    <p><strong>Insurance Policy Number:</strong> @Model.InsurancePolicyNumber</p>
</div>

<a href="@Url.Action("Edit", "Customer", new { id = Model.CustomerId })">Edit</a> |
<a href="@Url.Action("Delete", "Customer", new { id = Model.CustomerId })">Delete</a>

