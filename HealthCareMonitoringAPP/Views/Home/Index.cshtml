@{
    ViewData["Title"] = "HealthCare Monitoring App - Home";
}

<div class="container text-center">
    <!-- Header Section -->
    <header>
        <h1 class="display-4 text-primary">Welcome to HealthCare Monitoring App</h1>
        <p class="lead text-muted">Empowering healthcare providers and patients with real-time monitoring and insights</p>
    </header>

    <!-- Main Content Section -->
    <div class="row">
        <!-- Feature 1: Patient Monitoring -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-success">Patient Monitoring</h5>
                    <p class="card-text">Monitor patient vitals and health metrics in real-time to ensure timely interventions and personalized care.</p>
                    <a href="#" class="btn btn-outline-success">Learn More</a>
                </div>
            </div>
        </div>

        <!-- Feature 2: Healthcare Analytics -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-warning">Healthcare Analytics</h5>
                    <p class="card-text">Analyze health data to detect patterns and improve treatment outcomes with powerful analytics tools.</p>
                    <a href="#" class="btn btn-outline-warning">Learn More</a>
                </div>
            </div>
        </div>

        <!-- Feature 3: Alerts & Notifications -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-danger">Alerts & Notifications</h5>
                    <p class="card-text">Receive instant alerts for abnormal health readings to take swift actions and ensure patient safety.</p>
                    <a href="#" class="btn btn-outline-danger">Learn More</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
    <section class="my-5">
        <h2 class="h3 text-primary">Start Monitoring Today!</h2>
        <p>Sign up to begin monitoring patient health data and stay on top of their well-being with our user-friendly platform.</p>
        <a href="#" class="btn btn-primary btn-lg">Get Started</a>
    </section>
</div>
