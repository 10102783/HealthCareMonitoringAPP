@model HealthCareMonitoringAPP.Models.MedicalHistory

<h1>Create Medical History</h1>

<form asp-action="Create">
    <div class="form-group">
        <label for="CustomerId">Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers"></select>
    </div>

    <div class="form-group">
        <label for="Diagnosis">Diagnosis</label>
        <input asp-for="Diagnosis" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Treatment">Treatment</label>
        <input asp-for="Treatment" class="form-control" />
    </div>

    <div class="form-group">
        <label for="DateOfDiagnosis">Date of Diagnosis</label>
        <input asp-for="DateOfDiagnosis" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label for="Notes">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
